<!DOCTYPE html>
<html>
<head>
  <title>Blocipedia</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>
<body>
<div class=''>
  <div class=''>
    <ul class=''>
      <li class='' ><%= link_to 'Blocipedia', root_url %></li>
      <li><%= link_to 'Wikis', wikis_path %> </li>
      <li><%= link_to 'New Wiki', new_wiki_path %> </li>
      <div class=''>
        <% if current_user %>
            Hello!
            <%= link_to current_user.email, edit_user_registration_path %>
            <% if current_user.standard? %>
                <%= link_to 'Upgrade your Account', new_charge_path %>
                <% elsif current_user.premium? %>
                    <%= button_to 'Downgrade', downgrade_path, data: { confirm: "Downgrading will make your private wikis public. Are you sure you want to downgrade?" }, method: :delete %>
                <% else %>
                    <%= "Your an Admin" %>
            <% end %>
            <%= button_to 'Sign out', destroy_user_session_path, method: :delete %>
        <% else %>
            <%= link_to 'Log In', new_user_session_path %> or
            <%= link_to 'Join Us', new_user_registration_path %>
        <% end %>
      </div>
    </ul>
  </div>
</div>
<% if flash[:notice] %>
    <div class='alert alert-success'>
      <button type='button' class='close' data-dismiss='alert'>&times;</button>
      <%= flash[:notice] %>
    </div>
<% elsif flash[:error] %>
    <div class='alert alert-danger'>
      <button type='button' class='close' data-dismiss='alert'>&times;</button>
      <%= flash[:error] %>
    </div>
<% elsif flash[:alert] %>
    <div class='alert alert-warning'>
      <button type='button' class='close' data-dismiss='alert'>&times;</button>
      <%= flash[:alert] %>
    </div>
<% end %>
<%= yield %>
<div class=''>
  <div class=''>
    <footer></footer>
  </div>
</div>
</body>
</html>